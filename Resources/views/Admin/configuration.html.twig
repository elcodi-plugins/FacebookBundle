{% extends 'AdminCoreBundle::layout.html.twig' %}


{% block breadcrumb %}

    {% include '@AdminCore/Common/breadcrumb.html.twig' with {
        breadcrumb: [
            { name: 'admin.plugin.plural'|trans, url: url('admin_plugin_list') },
            { name: 'facebook_plugin.title'|trans, active: true },
        ]}
    %}

{% endblock breadcrumb %}


{% block content %}

    <form class="form" method="POST">
        <fieldset>
            <div class="col-1-3">
                <h2 class="fw-n">{{ 'facebook_plugin.section.settings.title'|trans }}</h2>
                <a target="_blank" href="https://www.facebook.com/">
                    {{ 'facebook_plugin.action.visit_google'|trans }}
                </a>
            </div>
            <div class="col-2-3">
                <div class="box">
                    <ol>
                        <li>
                            <label for="facebook_account">
                                {{ 'facebook_plugin.field.facebook_account.title'|trans }}
                            </label>
                            <input id="facebook_account" type="text"
                                   name="facebook_account"
                                   value="{{ plugin.configuration['facebook_account'] }}"
                                   placeholder="facebookAccount" />
                        </li>
                    </ol>
                </div>
            </div>
            <div class="col-1-3">
                &nbsp;
            </div>
            <div class="col-2-3">
                <button type="submit" class="button-primary">{{ 'ui.forms.save'|trans }}</button>
            </div>
        </fieldset>
    </form>

{% endblock content %}
